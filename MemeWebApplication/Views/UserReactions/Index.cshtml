@model IEnumerable<MemeWebApplication.Models.UserReaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Template)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Download)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Template.FilmName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Favourite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Download)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>|
                <a asp-action="Download" asp-route-id="@item.ID">Download</a>|
             

            </td>
        </tr>
}
    </tbody>
