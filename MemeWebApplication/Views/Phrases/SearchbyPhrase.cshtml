
@model IEnumerable<MemeWebApplication.Models.Phrase>



@{
    ViewData["Title"] = "SearchbyPhrase";
}

<h1>SearchbyPhrase</h1>

<form asp-controller="Phrases" asp-action="SearchbyPhrase" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TemplateID)
                
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TemplateID)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                    <a asp-action="CreatePhrase" asp-route-id="@item.ID">Create Phrase</a> |
                    <a asp-action="CreateActor" asp-route-id="@item.ID">Create Actor</a>

                </td>
            </tr>
        }
    </tbody>
</table>
